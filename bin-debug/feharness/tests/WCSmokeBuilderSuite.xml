<?xml version="1.0"?>
<testsuite name="smoke" game="wc" description="Basic build, upgrade, and instant upgrade test suite">
  <testcase name="Wait on game load">
    <condition id="GAME_LOADED" timeout="2000"/>
  </testcase>
  <testcase name="Eliminate resources">
    <function id="ELIMINATE_METAL" timeout="200"/>
    <condition id="METAL_EMPTY" timeout="40" skippable="true"/>
    <function id="ELIMINATE_OIL" timeout="40"/>
    <condition id="OIL_EMPTY" timeout="40" skippable="true"/>
  </testcase>
  <testcase name="Add resources">
    <function id="FILL_METAL" timeout="40"/>
    <condition id="METAL_FULL" timeout="40" skippable="true"/>
     <function id="FILL_OIL" timeout="40"/>
    <condition id="OIL_FULL" timeout="40" skippable="true"/>
  </testcase>
  <testcase name="Eliminate buildings">
    <function id="DESTROY_ALL_BUILDINGS" timeout="40"/>
    <function id="DESTROY_ALL_BUILDINGS" timeout="40"/>
    <function id="DESTROY_ALL_BUILDINGS" timeout="40"/>
    <function id="DESTROY_ALL_BUILDINGS" timeout="40"/>
    <function id="DESTROY_ALL_BUILDINGS" timeout="40"/>
  </testcase>
  <testcase name="Reset">
    <function id="RESET_UPGRADES" timeout="40"/>
  </testcase>
  <testcase name="Instant upgrade command center">
    <function id="INSTANT_UPGRADE_COMMAND_CENTER" timeout="80"/>
    <condition id="COMMAND_CENTER_IS_LEVEL_1" timeout="200"/>
    <function id="INSTANT_UPGRADE_COMMAND_CENTER" timeout="80"/>
    <condition id="COMMAND_CENTER_IS_LEVEL_2" timeout="200"/>
  </testcase>
  <testcase name="Build power plant">
    <function id="BUILD_POWER_PLANT" timeout="40"/>
    <condition id="POWER_PLANT_BUILDING" timeout="40"/>
  </testcase>
  <testcase name="Cancel power plant">
    <function id="STOP_BUILD_POWER_PLANT" timeout="40"/>
    <condition id="POWER_PLANT_DOES_NOT_EXIST" timeout="40"/>
  </testcase>
  <testcase name="Finish build power plant">
    <function id="BUILD_POWER_PLANT" timeout="40"/>
    <condition id="POWER_PLANT_BUILDING" timeout="40"/>
    <function id="SPEED_UP_FINISH" timeout="40"/>
    <condition id="POWER_PLANT_IS_LEVEL_1" timeout="40"/>
  </testcase>
  <testcase name="Build Oil">
    <function id="BUILD_OIL" timeout="40"/>
    <condition id="OIL_BUILDING" timeout="40"/>
  </testcase>
  <testcase name="Stop build Oil">
    <function id="STOP_BUILD_OIL" timeout="40"/>
    <condition id="OIL_DOES_NOT_EXIST" timeout="40"/>
  </testcase>
  <testcase name="Finish Oil naturally">
    <function id="BUILD_OIL" timeout="40"/>
    <condition id="OIL_IS_LEVEL_1" timeout="1000"/>
  </testcase>
  <testcase name="Build metal">
    <function id="BUILD_METAL" timeout="40"/>
    <condition id="METAL_BUILDING" timeout="40"/>
  </testcase>
  <testcase name="Stop build metal">
    <function id="STOP_BUILD_METAL" timeout="40"/>
    <condition id="METAL_DOES_NOT_EXIST" timeout="60"/>
  </testcase>
  <testcase name="Finish metal naturally">
    <function id="BUILD_METAL" timeout="40"/>
    <condition id="METAL_IS_LEVEL_1" timeout="1000"/>
  </testcase>
  <testcase name="Add resources">
    <function id="FILL_METAL" timeout="40"/>
    <condition id="METAL_FULL" timeout="40" skippable="true"/>
    <function id="FILL_OIL" timeout="40"/>
    <condition id="OIL_FULL" timeout="40" skippable="true"/>
  </testcase>
  <testcase name="Upgrade oil">
    <function id="UPGRADE_OIL" timeout="200"/>
    <condition id="OIL_UPGRADING" timeout="40"/>
  </testcase>
  <testcase name="Cancel upgrade oil">
    <function id="STOP_UPGRADE_OIL" timeout="40"/>
    <condition id="OIL_NOT_UPGRADING" timeout="40"/>
  </testcase>
  <testcase name="Upgrade metal">
    <function id="UPGRADE_METAL" timeout="40"/>
    <condition id="METAL_UPGRADING" timeout="40"/>
  </testcase>
  <testcase name="Cancel upgrade metal">
    <function id="STOP_UPGRADE_METAL" timeout="40"/>
    <condition id="METAL_NOT_UPGRADING" timeout="40"/>
  </testcase>
  <testcase name="Upgrade metal and apply speed up">
    <function id="UPGRADE_METAL" timeout="40"/>
    <condition id="METAL_UPGRADING" timeout="40"/>
    <function id="SPEED_UP_FINISH" timeout="40"/>
    <condition id="METAL_IS_LEVEL_2" timeout="40"/>
  </testcase>
  <testcase name="Upgrade oil and apply speed up">
    <function id="UPGRADE_OIL" timeout="40"/>
    <condition id="OIL_UPGRADING" timeout="40"/>
    <function id="SPEED_UP_FINISH" timeout="40"/>
    <condition id="OIL_IS_LEVEL_2" timeout="40"/>
  </testcase>
  <testcase name="Instant upgrade metal">
    <function id="INSTANT_UPGRADE_METAL" timeout="40"/>
    <condition id="METAL_IS_LEVEL_3" timeout="40"/>
  </testcase>
  <testcase name="Instant upgrade oil">
    <function id="INSTANT_UPGRADE_OIL" timeout="40"/>
    <condition id="OIL_IS_LEVEL_3" timeout="40"/>
  </testcase>
  <testcase name="Build Metal Storage">
    <function id="FILL_METAL" timeout="40"/>
    <condition id="METAL_FULL" timeout="40" skippable="true"/>
    <function id="FILL_OIL" timeout="40"/>
    <condition id="OIL_FULL" timeout="40" skippable="true"/>
    <function id="BUILD_METAL_STORAGE" timeout="40"/>
    <condition id="METAL_STORAGE_BUILDING" timeout="40"/>
  </testcase>
  <testcase name="Speed Up Build Metal">
    <function id="SPEED_UP_FINISH" timeout="400"/>
    <condition id="METAL_STORAGE_IS_LEVEL_1" timeout="200"/>
  </testcase>
  <testcase name="Build Oil Storage">
    <function id="BUILD_OIL_STORAGE" timeout="40"/>
    <function id="SPEED_UP_FINISH" timeout="200"/>
    <condition id="OIL_STORAGE_IS_LEVEL_1" timeout="200"/>
  </testcase>
  <testcase name="Build Tech Center">
    <function id="FILL_METAL" timeout="40"/>
    <condition id="METAL_FULL" timeout="40" skippable="true"/>
    <function id="FILL_OIL" timeout="40"/>
    <condition id="OIL_FULL" timeout="40" skippable="true"/>
    <function id="BUILD_TECH_CENTER" timeout="200"/>
    <condition id="TECH_CENTER_BUILDING" timeout="200"/>
  </testcase>
  <testcase name="Tech Center Finish">
    <function id="SPEED_UP_FINISH" timeout="400"/>
    <condition id="TECH_CENTER_IS_LEVEL_1" timeout="40"/>
  </testcase>
  <testcase name="Unlock JackRabbit">
    <function id="FILL_METAL" timeout="40"/>
    <condition id="METAL_FULL" timeout="40" skippable="true"/>
    <function id="FILL_OIL" timeout="40"/>
    <condition id="OIL_FULL" timeout="40" skippable="true"/>
    <function id="UNLOCK_VEHICLE_TANKDRONE" timeout="40"/>
    <condition id="IS_UNLOCKING_VEHICLE_TANKDRONE" timeout="200"/>
  </testcase>
  <testcase name="Cancel JackRabbit">
    <function id="CANCEL_UNLOCK_VEHICLE_TANKDRONE" timeout="40"/>
    <condition id="IS_NOT_UNLOCKING_VEHICLE_TANKDRONE" timeout="200"/>
  </testcase>
  <testcase name="SpeedUp JackRabbit">
    <function id="UNLOCK_VEHICLE_TANKDRONE" timeout="40"/>
    <function id="FINISH_UNLOCK_VEHICLE_TANKDRONE" timeout="40"/>
    <condition id="IS_UNLOCKED_VEHICLE_TANKDRONE_1" timeout="200"/>
  </testcase>
  <testcase name="Instant Unlock JackRabbit Level 2">
    <function id="INSTANT_UNLOCK_VEHICLE_TANKDRONE" timeout="40"/>
    <condition id="IS_UNLOCKED_VEHICLE_TANKDRONE_2" timeout="200"/>
  </testcase>
  <testcase name="Instant Unlock Buggy">
    <function id="FILL_METAL" timeout="40"/>
    <condition id="METAL_FULL" timeout="40" skippable="true"/>
    <function id="FILL_OIL" timeout="40"/>
    <condition id="OIL_FULL" timeout="40" skippable="true"/>
    <function id="INSTANT_UNLOCK_VEHICLE_BUGGY" timeout="40"/>
    <condition id="IS_UNLOCKED_VEHICLE_BUGGY_1" timeout="200"/>
  </testcase>
</testsuite>